<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Store.ViewModels"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="900"
        Height="900"
        Width="1000"
        Background="#D9D9D9"
        WindowStartupLocation="CenterScreen"
        x:Class="Store.CreateProductWindowView"
        x:DataType="vm:CreateProductWindowViewModel"
        Title="Create Product">
        <Grid ColumnDefinitions="450,550">
			<StackPanel Grid.Column="0" Orientation="Vertical" Margin="50">
                <Image Height="400" Width="400"></Image>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Vertical">
				<TextBlock Classes="style7" FontSize="35" HorizontalAlignment="Center" Margin="0,30,0,10">Sản phẩm mới</TextBlock>
                <StackPanel Orientation="Horizontal"> 
                   <StackPanel Orientation="Vertical" Margin="10,0,20,0">
                        <TextBlock Classes="style7" FontSize="20" HorizontalAlignment="Left" Margin="0,10,0,0" TextAlignment="Left">Mã sản phẩm:</TextBlock>
                        <TextBox Classes="style8" Width="250" Margin="0,0,0,0"/>
                   </StackPanel>
                   <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                        <TextBlock Classes="style7" FontSize="20" HorizontalAlignment="Left" Margin="0,10,0,0" TextAlignment="Left">Tên sản phẩm:</TextBlock>
                        <TextBox Classes="style8" Width="250" Margin="0,0,0,0"/>
                   </StackPanel>
                </StackPanel>
                 <StackPanel Orientation="Horizontal"> 
                   <StackPanel Orientation="Vertical" Margin="10,0,20,0">
                        <TextBlock Classes="style7" FontSize="20" HorizontalAlignment="Left" Margin="0,10,0,0" TextAlignment="Left">Giá sản phẩm:</TextBlock>
                        <TextBox Classes="style8" Width="250" Margin="0,0,0,0"/>
                   </StackPanel>
                   <StackPanel Orientation="Vertical" Margin="0,0,20,0">
                        <TextBlock Classes="style7" FontSize="20" HorizontalAlignment="Left" Margin="0,10,0,0" TextAlignment="Left">Mã sản phẩm:</TextBlock>
                        <TextBox Classes="style8" Width="250" Margin="0,0,0,0"/>
                   </StackPanel>
                </StackPanel>
            </StackPanel>

        </Grid>
</Window>
