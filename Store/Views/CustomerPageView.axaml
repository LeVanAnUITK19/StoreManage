<UserControl
    d:DesignHeight="700"
    d:DesignWidth="1000"
    mc:Ignorable="d"
    x:Class="Store.Views.CustomerPageView"
    x:DataType="viewModel:CustomerPageViewModel"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:Store.ViewModels"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
     <Border CornerRadius="20" Background="White" Margin="10,10,10,10" BoxShadow="0 0 10 2 black">
    <Grid RowDefinitions="180, 490">
        <!--Chức năng-->
        <StackPanel Grid.Row="0" Orientation="Vertical">
           <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="30,20,30,20">
               <ComboBox ItemsSource="{Binding DanhSachBoLoc}" Classes="style5" Width="200" Margin="0,0,20,0">
               </ComboBox>
               <TextBox Classes="style4" Width="400" Margin="0,0,200,0">
               </TextBox>
               <Button  Command="{Binding TaoKhachHangButtonCommand}" Classes="style6" Height="60" Width="100">
				   Tạo
               </Button>
           </StackPanel>
           
           <Border Margin="30,0,30,0" Width="920" Height="60" BorderBrush="black" BorderThickness="1">
            <StackPanel Orientation="Horizontal" Classes="style9">
               <TextBlock Classes="style7" Width="120">MaKH</TextBlock>
               <TextBlock Classes="style7" Width="300">Tên khách hàng</TextBlock>
               <TextBlock Classes="style7" Width="200">Số điện thoại</TextBlock>
                <TextBlock Classes="style7" Width="300">Địa chỉ</TextBlock>
           </StackPanel>
           </Border>
        </StackPanel>
         <!---->
    <Border Grid.Row="1"  Margin="30,0,30,0" CornerRadius="10">
    <ScrollViewer Width="920" Height="490" Margin="0,0,0,0">
        <ItemsControl ItemsSource="{Binding KhachHangs}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,0,0,10"  Classes="style10" Width="920" Height="60" CornerRadius="15"  BorderBrush="black" BorderThickness="1" Padding="5,5,5,5"> 
                        <StackPanel Orientation="Horizontal"  Margin="0,0,0,0" Height="50">
                            <TextBlock Text="{Binding MaKH}" Classes="style7" Height="50" Width="120" FontWeight="Light"/>
                            <TextBlock Text="{Binding TenKH}" Classes="style7" Width="250" Height="50" TextAlignment="Left" FontWeight="Light"/>
                            <TextBlock Text="{Binding SDT}" Classes="style7" Width="300" Height="50" FontWeight="Light"/>
                            <TextBlock Text="{Binding DiaChi}" Classes="style7" Width="250" Height="50" FontWeight="Light"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
    </Border>
    </Grid>
   </Border>
</UserControl>