<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
		Width="1200"
		Height="800"
		Background="Transparent"
		WindowStartupLocation="CenterScreen"
		SystemDecorations="None"

		xmlns:vm="using:Store.ViewModels"
		x:DataType="vm:ForgotPasswordViewModel"
		x:Class="Store.ForgotPasswordView"
		Title="ForgotPasswordView">


	<!--Copy chỉnh sửa của MainWindowView-->



	<Border  CornerRadius="40" Background="White" ClipToBounds="True" Height="800" Width="1200" >
		<Grid>
			<Button Command="{Binding $parent[Window].Close}" Classes="style12" Margin=" 1140 0 0 730">X</Button>
			<Border   Height="600" Width="900">
				<!--  Chia bố cục  -->

				<Grid Background="White" ColumnDefinitions="450,450">
					<!--Phần 1-->
					<Border Background="#1F5CF5" CornerRadius="80,0,0,0" BoxShadow="0 0 2 2 #5C81F0" Grid.Column="0">
						<StackPanel>
							<TextBlock FontSize="40" Foreground="white" Margin="30" TextWrapping="Wrap"
									   Text="Phần mềm
									   Quản lý bán hàng">
							</TextBlock>
							<TextBlock FontSize="50" FontWeight="Bold" Foreground="White" Margin="20,50,20,50" TextWrapping="Wrap" TextAlignment="Center">
								Chào mừng đến với ShopLinQ
							</TextBlock>
							<Button  Command="{Binding RegisterButtonCommand}" Classes="style1" CornerRadius="30" Height="70" HorizontalAlignment="Center" Width="300">
								Đăng ký
							</Button>
						</StackPanel>
					</Border>
					<!--Phần 2-->
					<Border Grid.Column="1" Background="White" CornerRadius="0,0,80,0" BoxShadow="0 0 2 2  #5C81F0">
						<StackPanel HorizontalAlignment="Center" Orientation="Vertical">

							<TextBlock FontSize="40" FontWeight="Bold" Margin="20,150,50,0" TextAlignment="Center" Foreground="Red" Text="Lấy lại mật khẩu"/>
							<TextBlock  Text="{Binding MessageError}" Height="30" Width="400" FontSize="25" FontWeight="Bold" Foreground="red"></TextBlock>

							<Border Height="60" Width="400" Margin="25,10,50,50" CornerRadius="10" BoxShadow="2 2 3 2 gray">
								<TextBox Text="{Binding Email}" Background="#D9D9D9" FontSize="30" Foreground="Black"  Watermark="Email" CornerRadius="10"/>
							</Border>
							<Button Command ="{Binding ConfirmButtonCommand}" Classes="style1" CornerRadius="30" Height="70"  Width="300" HorizontalAlignment="Center">
								Xác nhận
							</Button>
						</StackPanel>
					</Border>

				</Grid>
			</Border>
		</Grid>
	</Border>
</Window>
