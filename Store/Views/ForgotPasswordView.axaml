<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="700" d:DesignHeight="500"
		Width="700"
		Height="500"
		Background="Transparent"
		WindowStartupLocation="CenterScreen"
		SystemDecorations="None"
		xmlns:vm="using:Store.ViewModels"
		x:DataType="vm:ForgotPasswordViewModel"
		x:Class="Store.ForgotPasswordView"
		Title="ShopQuality - Quên mật khẩu">

	<Border CornerRadius="16" ClipToBounds="True" BoxShadow="0 10 40 5 #30000000">
		<Border.Background>
			<LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
				<GradientStop Color="#F9FAFB" Offset="0"/>
				<GradientStop Color="#F3F4F6" Offset="1"/>
			</LinearGradientBrush>
		</Border.Background>
		<Grid>
			<!-- Close Button -->
			<Button Command="{Binding $parent[Window].Close}" 
					Classes="close-btn"
					HorizontalAlignment="Right" 
					VerticalAlignment="Top" 
					Margin="0,16,16,0"
					ZIndex="10">
				✕
			</Button>
			
			<!-- Main Content -->
			<Grid ColumnDefinitions="*,*">
				<!-- Left Panel - Info -->
				<Border Grid.Column="0" Padding="50,60">
					<StackPanel VerticalAlignment="Center" Spacing="24">
						<!-- Icon -->
						<Border Background="#667EEA" 
								CornerRadius="20" 
								Width="80" 
								Height="80"
								HorizontalAlignment="Center"
								BoxShadow="0 8 24 0 #30667EEA">
							<TextBlock Text="🔐" 
									   FontSize="48" 
									   HorizontalAlignment="Center" 
									   VerticalAlignment="Center"/>
						</Border>
						
						<!-- Title -->
						<TextBlock Text="Quên mật khẩu?" 
								   FontSize="28" 
								   FontWeight="Bold" 
								   Foreground="#111827"
								   TextAlignment="Center"/>
						
						<!-- Description -->
						<TextBlock Text="Nhập email đã đăng ký để nhận hướng dẫn khôi phục" 
								   FontSize="14" 
								   Foreground="#6B7280"
								   TextAlignment="Center"
								   TextWrapping="Wrap"
								   LineHeight="20"/>
						
						<!-- Divider -->
						<Border Height="1" 
								Background="#E5E7EB" 
								Margin="20,8"/>
						
						<!-- Back Button -->
						<Button Command="{Binding RegisterButtonCommand}" 
								Classes="secondary"
								Height="40"
								HorizontalAlignment="Stretch">
							← Quay lại đăng nhập
						</Button>
					</StackPanel>
				</Border>
				
				<!-- Right Panel - Form -->
				<Border Grid.Column="1" 
						Background="White" 
						CornerRadius="0,16,16,0"
						BoxShadow="-4 0 16 0 #10000000">
					<StackPanel VerticalAlignment="Center" 
								Margin="50,0"
								Spacing="20">
						<!-- Header -->
						<StackPanel Spacing="8" Margin="0,0,0,16">
							<TextBlock Text="Khôi phục tài khoản" 
									   FontSize="24" 
									   FontWeight="Bold" 
									   Foreground="#111827"/>
							<TextBlock Text="Nhập email của bạn" 
									   FontSize="14" 
									   Foreground="#6B7280"/>
						</StackPanel>
						
						<!-- Error Message -->
						<Border Background="#FEE2E2" 
								BorderBrush="#EF4444" 
								BorderThickness="1"
								CornerRadius="8"
								Padding="12"
								IsVisible="{Binding MessageError, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
							<TextBlock Text="{Binding MessageError}" 
									   FontSize="13" 
									   Foreground="#DC2626"
									   TextWrapping="Wrap"/>
						</Border>
						
						<!-- Email Input -->
						<StackPanel Spacing="6">
							<TextBlock Text="Địa chỉ Email" 
									   Classes="label"/>
							<TextBox Text="{Binding Email}" 
									 Classes="modern-input"
									 Watermark="example@email.com"/>
						</StackPanel>
						
						<!-- Submit Button -->
						<Button Command="{Binding ConfirmButtonCommand}" 
								Classes="primary"
								Height="44"
								FontSize="15"
								Margin="0,8,0,0"
								HorizontalAlignment="Stretch">
							Gửi yêu cầu
						</Button>
					</StackPanel>
				</Border>
			</Grid>
		</Grid>
	</Border>
</Window>
