<Window
Icon="/Assets/avalonia-logo.ico"
Title="test_app"
Height="800"
Width="1200"
WindowStartupLocation="CenterScreen"
Background="White"
d:DesignHeight="800"
d:DesignWidth="1200"

SystemDecorations="None"
mc:Ignorable="d"
x:Class="Store.Views.MainWindow"
x:DataType="vm:MainWindowViewModel"
xmlns="https://github.com/avaloniaui"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:vm="using:Store.ViewModels"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Design.DataContext>
		<vm:MainWindowViewModel />
	</Design.DataContext>

	<Border  Height="600" Width="900">
		<!--  Chia bố cục  -->

		<Grid Background="White" ColumnDefinitions="450,450">
			<!--Phần 1-->
			<Border Background="#1F5CF5" CornerRadius="80,0,0,0" BoxShadow="0 0 2 2 #5C81F0" Grid.Column="0">
				<StackPanel>
					<TextBlock FontSize="40" Foreground="white" Margin="30" TextWrapping="Wrap"
							   Text="Phần mềm
							   Quản lý bán hàng">
					</TextBlock>
					<TextBlock FontSize="50" FontWeight="Bold" Foreground="White" Margin="20,50,20,50" TextWrapping="Wrap" TextAlignment="Center">
						Chào mừng đến với ShopLinQ
					</TextBlock>
					<Button Command="{Binding RegisterButtonCommand}" Classes="style1" CornerRadius="30" Height="70" HorizontalAlignment="Center" Width="300">
						Đăng ký
					</Button>
				</StackPanel>
			</Border>
			<!--Phần 2-->
			<Border Grid.Column="1" Background="White" CornerRadius="0,0,80,0" BoxShadow="0 0 2 2  #5C81F0">
				<StackPanel HorizontalAlignment="Center" Orientation="Vertical">
					<TextBlock FontSize="40" FontWeight="Bold" Margin="20,100,50,0" TextAlignment="Center" Foreground="black" Text="Đăng nhập tài khoản"/>
					<TextBox Background="#D9D9D9" FontSize="30" Height="60" Width="400" Margin="25,50,50,25" Watermark="Name" />
					<TextBox Background="#D9D9D9" FontSize="30" Height="60" Width="400" Margin="25,0,50,25" PasswordChar="*" Watermark="Password"/>

					<TextBlock Foreground="Red" FontSize="25" Margin="25,0,0,25">
						Bạn quên mật khẩu?
					</TextBlock>

					<Button Command="{Binding LogInButtonCommand}" Classes="style1" CornerRadius="30" Height="70"  Width="300" HorizontalAlignment="Center">
						Đăng nhập
					</Button>
				</StackPanel>
			</Border>

		</Grid>
	</Border>
</Window>
