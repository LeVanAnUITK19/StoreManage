<Window
Icon="/Assets/avalonia-logo.ico"
Title="test_app"
Height="800"
Width="1200"
WindowStartupLocation="CenterScreen"
d:DesignHeight="800"
d:DesignWidth="1200"
Background="White"

SystemDecorations="None"

mc:Ignorable="d"
x:Class="Store.Views.MainWindow"
x:DataType="vm:MainWindowViewModel"
xmlns="https://github.com/avaloniaui"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
xmlns:vm="using:Store.ViewModels"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


	<Border CornerRadius="80,0,80,80" Background="White" ClipToBounds="True">
		<Grid>
			<Button Command="{Binding $parent[Window].Close}" Classes="style12" Margin=" 1160 0 0 754">X</Button>
			<Border   Height="600" Width="900">
				<!--  Chia bố cục  -->

				<Grid Background="White" ColumnDefinitions="450,450">
					<!--Phần 1-->
					<Border Background="#1F5CF5" CornerRadius="80,0,0,0" BoxShadow="0 0 2 2 #5C81F0" Grid.Column="0">
						<StackPanel>
							<TextBlock FontSize="40" Foreground="white" Margin="30" TextWrapping="Wrap"
									   Text="Phần mềm
									   Quản lý bán hàng">
							</TextBlock>
							<TextBlock FontSize="50" FontWeight="Bold" Foreground="White" Margin="20,50,20,50" TextWrapping="Wrap" TextAlignment="Center">
								Chào mừng đến với ShopLinQ
							</TextBlock>
							<Button Command="{Binding RegisterButtonCommand}" Classes="style1" CornerRadius="30" Height="70" HorizontalAlignment="Center" Width="300">
								Đăng ký
							</Button>
						</StackPanel>
					</Border>
					<!--Phần 2-->
					<Border Grid.Column="1" Background="White" CornerRadius="0,0,80,0" BoxShadow="0 0 2 2  #5C81F0">
						<StackPanel HorizontalAlignment="Center" Orientation="Vertical">

							<TextBlock FontSize="40" FontWeight="Bold" Margin="20,100,50,0" TextAlignment="Center" Foreground="black" Text="Đăng nhập tài khoản"/>
							<TextBlock  Text ="{Binding KiemTraDangNhap}" Height="30" Width="400" FontSize="25" FontWeight="Bold" Foreground="red"></TextBlock>

							<Border Height="60" Width="400" Margin="25,10,50,25" CornerRadius="10" BoxShadow="2 2 3 2 gray">
								<TextBox Text="{Binding TenDangNhap}" Background="#D9D9D9" FontSize="30" Foreground="Black"  Watermark="Name" CornerRadius="10"/>
							</Border>
							<Border Height="60" Width="400" Margin="25,0,50,25" CornerRadius="10" BoxShadow="2 2 3 2 gray">
								<TextBox Text="{Binding MatKhau}" Background="#D9D9D9" FontSize="30"   Foreground="Black" PasswordChar="*" Watermark="Password" CornerRadius="10"/>
							</Border>
							<TextBlock Foreground="Red" FontSize="25" Margin="25,0,0,25">
								Bạn quên mật khẩu?
							</TextBlock>

							<Button Command="{Binding LogInButtonCommand}" Classes="style1" CornerRadius="30" Height="70"  Width="300" HorizontalAlignment="Center">
								Đăng nhập
							</Button>
						</StackPanel>
					</Border>

				</Grid>
			</Border>
		</Grid>
	</Border>
</Window>
