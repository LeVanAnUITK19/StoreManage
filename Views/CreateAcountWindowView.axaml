<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:vm="using:Store.ViewModels"
		mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
		Height="800"
		Width="1200"
		Background="Transparent"
		SystemDecorations="None"
		WindowStartupLocation="CenterScreen"
		x:DataType="vm:CreateAcountWindowViewModel"
		x:Class="Store.Views.CreateAcountWindowView"
		Title="CreateAcountWindowView">
	<Window.DataContext>
		<vm:CreateAcountWindowViewModel/>
	</Window.DataContext>
	<Border CornerRadius="16" Height="800" Width="1200" ClipToBounds="True" BoxShadow="0 10 40 5 #30000000">
		<Border.Background>
			<LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
				<GradientStop Color="#F9FAFB" Offset="0"/>
				<GradientStop Color="#F3F4F6" Offset="1"/>
			</LinearGradientBrush>
		</Border.Background>
		<Grid>
			<!-- Close Button -->
			<Button Command="{Binding $parent[Window].Close}" 
					Classes="close-btn"
					HorizontalAlignment="Right" 
					VerticalAlignment="Top" 
					Margin="0,16,16,0"
					ZIndex="10">
				✕
			</Button>

			<!-- Main Content -->
			<Border Background="White" CornerRadius="16" Margin="70,50,70,50" BoxShadow="0 8 32 0 #20000000">
				<ScrollViewer VerticalScrollBarVisibility="Auto">
					<Grid ColumnDefinitions="360,*" Margin="40">
						<!-- Left Column - Avatar Section -->
						<StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="0,30,30,0">
							<TextBlock FontSize="24" 
									   FontWeight="Bold" 
									   Foreground="#111827"
									   TextAlignment="Center"
									   Margin="0,0,0,32">
								Đăng ký tài khoản
							</TextBlock>
							
							<Border Background="#F9FAFB" 
									CornerRadius="16" 
									Width="260" 
									Height="260"
									BoxShadow="0 4 12 0 #10000000"
									ClipToBounds="True"
									Margin="0,0,0,16">
								<Image Source="{Binding HinhAnh, Mode=TwoWay}" 
									   Stretch="UniformToFill"/>
							</Border>
							
							<Button Command="{Binding ThemAnhButtonCommand}" 
									Classes="primary"
									Width="260" 
									Height="42"
									FontSize="14">
								📷 Chọn ảnh đại diện
							</Button>
						</StackPanel>

						<!-- Right Column - Form Fields -->
						<StackPanel Grid.Column="1" Margin="0,30,0,0">
							<!-- Username & Password Row -->
							<Grid ColumnDefinitions="*,*" Margin="0,0,0,16">
								<StackPanel Grid.Column="0" Margin="0,0,8,0">
									<TextBlock Text="Tên đăng nhập" Classes="label"/>
									<Border CornerRadius="8" BorderBrush="#D1D5DB" BorderThickness="1.5">
										<TextBox Text="{Binding TenDangNhap, Mode=TwoWay}" 
												 Background="White"
												 BorderThickness="0"
												 FontSize="14"
												 Foreground="Black"
												 Watermark="Nhập tên đăng nhập"
												 Padding="12,10"
												 CornerRadius="8"
												 VerticalContentAlignment="Center"/>
									</Border>
								</StackPanel>
								<StackPanel Grid.Column="1" Margin="8,0,0,0">
									<TextBlock Text="Mật khẩu" Classes="label"/>
									<Border CornerRadius="8" BorderBrush="#D1D5DB" BorderThickness="1.5">
										<TextBox Text="{Binding MatKhau, Mode=TwoWay}" 
												 Background="White"
												 BorderThickness="0"
												 FontSize="14"
												 PasswordChar="●"
												 Foreground="Black"
												 Watermark="Nhập mật khẩu"
												 Padding="12,10"
												 CornerRadius="8"
												 VerticalContentAlignment="Center"/>
									</Border>
								</StackPanel>
							</Grid>

							<!-- Full Name & Gender Row -->
							<Grid ColumnDefinitions="*,*" Margin="0,0,0,16">
								<StackPanel Grid.Column="0" Margin="0,0,8,0">
									<TextBlock Text="Họ và tên" Classes="label"/>
									<Border CornerRadius="8" BorderBrush="#D1D5DB" BorderThickness="1.5">
										<TextBox Text="{Binding HoTen, Mode=TwoWay}" 
												 Background="White"
												 BorderThickness="0"
												 FontSize="14"
												 Foreground="Black"
												 Watermark="Nhập họ và tên"
												 Padding="12,10"
												 CornerRadius="8"
												 VerticalContentAlignment="Center"/>
									</Border>
								</StackPanel>
								<StackPanel Grid.Column="1" Margin="8,0,0,0">
									<TextBlock Text="Giới tính" Classes="label"/>
									<Border CornerRadius="8" BorderBrush="#D1D5DB" BorderThickness="1.5">
										<ComboBox ItemsSource="{Binding DanhSachGioiTinh}" 
												  SelectedItem="{Binding GioiTinh, Mode=TwoWay}"
												  Background="White"
												  BorderThickness="0"
												  FontSize="14"
												  Foreground="Black"
												  PlaceholderText="Chọn giới tính"
												  Padding="12,10"
												  CornerRadius="8"
												  VerticalContentAlignment="Center"/>
									</Border>
								</StackPanel>
							</Grid>

							<!-- Birth Date & Phone Row -->
							<Grid ColumnDefinitions="*,*" Margin="0,0,0,16">
								<StackPanel Grid.Column="0" Margin="0,0,8,0">
									<TextBlock Text="Ngày sinh" Classes="label"/>
									<Border CornerRadius="8" BorderBrush="#D1D5DB" BorderThickness="1.5">
										<CalendarDatePicker SelectedDate="{Binding NgaySinh, Mode=TwoWay}" 
															FontSize="14"
															Background="White"
															Foreground="Black"
															BorderThickness="0"
															Padding="12,10"
															CornerRadius="8"
															VerticalContentAlignment="Center"/>
									</Border>
								</StackPanel>
								<StackPanel Grid.Column="1" Margin="8,0,0,0">
									<TextBlock Text="Số điện thoại" Classes="label"/>
									<Border CornerRadius="8" BorderBrush="#D1D5DB" BorderThickness="1.5">
										<TextBox Text="{Binding SDT, Mode=TwoWay}" 
												 Background="White"
												 BorderThickness="0"
												 FontSize="14"
												 Foreground="Black"
												 Watermark="+84 xxx xxx xxx"
												 Padding="12,10"
												 CornerRadius="8"
												 VerticalContentAlignment="Center"/>
									</Border>
								</StackPanel>
							</Grid>

							<!-- Email Field -->
							<StackPanel Margin="0,0,0,16">
								<TextBlock Text="Email" Classes="label"/>
								<Border CornerRadius="8" BorderBrush="#D1D5DB" BorderThickness="1.5">
									<TextBox Text="{Binding Email, Mode=TwoWay}" 
											 Background="White"
											 BorderThickness="0"
											 FontSize="14"
											 Foreground="Black"
											 Watermark="example@email.com"
											 Padding="12,10"
											 CornerRadius="8"
											 VerticalContentAlignment="Center"/>
								</Border>
							</StackPanel>

							<!-- Address Field -->
							<StackPanel Margin="0,0,0,24">
								<TextBlock Text="Địa chỉ" Classes="label"/>
								<Border CornerRadius="8" BorderBrush="#D1D5DB" BorderThickness="1.5">
									<TextBox Text="{Binding DiaChi, Mode=TwoWay}" 
											 Background="White"
											 BorderThickness="0"
											 FontSize="14"
											 Foreground="Black"
											 AcceptsReturn="True"
											 TextWrapping="Wrap"
											 Height="70"
											 Watermark="Nhập địa chỉ đầy đủ"
											 Padding="12,10"
											 CornerRadius="8"/>
								</Border>
							</StackPanel>

							<!-- Register Button -->
							<Button Command="{Binding DangKyButtonCommand}" 
									Classes="primary"
									Height="44"
									FontSize="14"
									HorizontalAlignment="Stretch">
								✓ Tạo tài khoản
							</Button>
						</StackPanel>
					</Grid>
				</ScrollViewer>
			</Border>
		</Grid>
	</Border>
</Window>
