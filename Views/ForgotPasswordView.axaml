<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
		Width="1200"
		Height="800"
		Background="Transparent"
		WindowStartupLocation="CenterScreen"
		SystemDecorations="None"
		xmlns:vm="using:Store.ViewModels"
		x:DataType="vm:ForgotPasswordViewModel"
		x:Class="Store.ForgotPasswordView"
		Title="ForgotPasswordView">

	<Border CornerRadius="20" ClipToBounds="True" Height="800" Width="1200" BoxShadow="0 10 40 5 #40000000">
		<Border.Background>
			<LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
				<GradientStop Color="#F5F7FA" Offset="0"/>
				<GradientStop Color="#E8EEF5" Offset="1"/>
			</LinearGradientBrush>
		</Border.Background>
		<Grid>
			<!-- Close Button -->
			<Button Command="{Binding $parent[Window].Close}" 
					Background="#F44336" 
					Foreground="White" 
					CornerRadius="10" 
					Width="40" 
					Height="40" 
					FontSize="18" 
					FontWeight="Bold"
					HorizontalAlignment="Right" 
					VerticalAlignment="Top" 
					Margin="0,20,20,0"
					Cursor="Hand">
				✕
			</Button>
			
			<!-- Main Content -->
			<Border Height="550" Width="900" CornerRadius="16" BoxShadow="0 8 32 0 #30000000">
				<Grid ColumnDefinitions="*,*">
					<!-- Left Panel -->
					<Border Grid.Column="0" CornerRadius="16,0,0,16" ClipToBounds="True">
						<Border.Background>
							<LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
								<GradientStop Color="#667EEA" Offset="0"/>
								<GradientStop Color="#764BA2" Offset="1"/>
							</LinearGradientBrush>
						</Border.Background>
						<StackPanel VerticalAlignment="Center" Margin="50,0">
							<TextBlock Text="🔐" 
									   FontSize="80" 
									   TextAlignment="Center"
									   Margin="0,0,0,30"/>
							<TextBlock FontSize="36" 
									   FontWeight="Bold" 
									   Foreground="White" 
									   TextAlignment="Center"
									   Margin="0,0,0,20">
								Quên mật khẩu?
							</TextBlock>
							<TextBlock FontSize="16" 
									   Foreground="#E0E0E0" 
									   TextAlignment="Center"
									   TextWrapping="Wrap"
									   Margin="0,0,0,40">
								Đừng lo lắng! Nhập email của bạn và chúng tôi sẽ gửi hướng dẫn khôi phục mật khẩu
							</TextBlock>
							<Button Command="{Binding RegisterButtonCommand}" 
									Background="Transparent" 
									BorderBrush="White" 
									BorderThickness="2"
									Foreground="White"
									CornerRadius="25" 
									Height="50" 
									Width="250"
									FontSize="16"
									FontWeight="SemiBold"
									HorizontalAlignment="Center"
									Cursor="Hand">
								← Quay lại đăng nhập
							</Button>
						</StackPanel>
					</Border>
					
					<!-- Right Panel - Recovery Form -->
					<Border Grid.Column="1" Background="White" CornerRadius="0,16,16,0">
						<StackPanel VerticalAlignment="Center" Margin="60,0">
							<TextBlock FontSize="28" 
									   FontWeight="Bold" 
									   Foreground="#2D3748"
									   TextAlignment="Center"
									   Margin="0,0,0,10">
								Khôi phục tài khoản
							</TextBlock>
							<TextBlock FontSize="14" 
									   Foreground="#718096"
									   TextAlignment="Center"
									   Margin="0,0,0,40">
								Nhập email đã đăng ký
							</TextBlock>
							
							<!-- Error Message -->
							<TextBlock Text="{Binding MessageError}" 
									   FontSize="14" 
									   Foreground="#F44336"
									   TextAlignment="Center"
									   Margin="0,0,0,20"
									   TextWrapping="Wrap"/>
							
							<!-- Email Input -->
							<TextBlock Text="Địa chỉ Email" 
									   FontSize="14" 
									   Foreground="#4A5568"
									   Margin="0,0,0,8"/>
							<Border CornerRadius="10" 
									BorderBrush="#E2E8F0" 
									BorderThickness="1.5"
									Margin="0,0,0,30">
								<TextBox Text="{Binding Email}" 
										 Background="White"
										 BorderThickness="0"
										 FontSize="16" 
										 Foreground="#2D3748"
										 Watermark="example@email.com" 
										 Padding="16,14"
										 CornerRadius="10"/>
							</Border>
							
							<!-- Confirm Button -->
							<Button Command="{Binding ConfirmButtonCommand}" 
									CornerRadius="10" 
									Height="50"
									FontSize="16"
									FontWeight="SemiBold"
									Foreground="White"
									HorizontalAlignment="Stretch"
									Cursor="Hand">
								<Button.Background>
									<LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,0%">
										<GradientStop Color="#667EEA" Offset="0"/>
										<GradientStop Color="#764BA2" Offset="1"/>
									</LinearGradientBrush>
								</Button.Background>
								Gửi yêu cầu
							</Button>
						</StackPanel>
					</Border>
				</Grid>
			</Border>
		</Grid>
	</Border>
</Window>
